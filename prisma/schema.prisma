// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  password String
  account Account?
  records Record[]
  incomes Income[]
}

model Account {
  id      Int   @id @default(autoincrement())
  balance Float @default(0)

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @unique
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  records Record[]
}

model Record {
  id         Int      @id @default(autoincrement())
  amount     Float
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int
}

model Income {
  id        Int      @id @default(autoincrement())
  amount    Float
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}